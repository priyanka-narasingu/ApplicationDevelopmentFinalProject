<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="567dp"
        android:background="@drawable/bg_6" >

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="266dp"
            android:layout_height="42dp"
            android:layout_alignLeft="@+id/buttonLogin1"
            android:layout_alignRight="@+id/buttonLogin1"
            android:layout_below="@+id/editTextUsername"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="@string/LoginPassword"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_alignLeft="@+id/editTextPassword"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/editTextPassword"
            android:layout_marginTop="101dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="@string/loginUserName"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/buttonLogin1"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_shape_btn"
            android:text="@string/LoginButton"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
